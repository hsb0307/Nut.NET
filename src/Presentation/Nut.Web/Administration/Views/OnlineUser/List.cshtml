@{
    var defaultGridPageSize = EngineContext.Current.Resolve<Nut.Core.Domain.Common.AdminAreaSettings>().DefaultGridPageSize;
    var gridPageSizes = EngineContext.Current.Resolve<Nut.Core.Domain.Common.AdminAreaSettings>().GridPageSizes;

    //page title
    ViewBag.Title = T("Admin.Users.OnlineUsers").Text;
}

<h3>
    <!-- Breadcrumb right aligned-->
    <ol class="breadcrumb pull-right">
        <li>
            <a href="#">@T("Admin.Home")</a>
        </li>
        <li class="active">
            @T("Admin.Users")
        </li>
    </ol>
    @T("Admin.Users.OnlineUsers")
    <!-- Small text for title-->
    <span class="text-sm hidden-xs">this is online Users.</span>
    <!-- Breadcrumb below title-->

</h3>

<!-- START table-responsive-->
<div class="table-responsive b0">
    <div id="onlinecustomers-grid"></div>

</div>
<!-- END table-responsive -->


<script>
    $(function () {
        $("#onlinecustomers-grid").kendoGrid({
            dataSource: {
                type: "json",
                transport: {
                    read: {
                        url: "@Html.Raw(Url.Action("List", "OnlineUser"))",
                        type: "POST",
                        dataType: "json"
                    }
                },
                schema: {
                    data: "Data",
                    total: "Total",
                    errors: "Errors"
                },
                error: function(e) {
                    display_kendoui_grid_error(e);
                    // Cancel the changes
                    this.cancelChanges();
                },
                pageSize: @(defaultGridPageSize),
                serverPaging: true,
                serverFiltering: true,
                serverSorting: true
            },
            pageable: {
                refresh: true,
                pageSizes: [@(gridPageSizes)]
            },
            editable: {
                confirmation: false,
                mode: "inline"
            },
            scrollable: false,
            columns: [{
                field: "Id",
                title: "@T("Admin.Users.OnlineUsers.Fields.UserInfo")",
                template: '<a href="@Url.Content("~/Admin/Customer/Edit/")#=Id#">#:UserInfo#</a>'
            }, {
                field: "LastIpAddress",
                title: "@T("Admin.Users.OnlineUsers.Fields.IPAddress")"
            }, {
                field: "LastActivityDate",
                title: "@T("Admin.Users.OnlineUsers.Fields.LastActivityDate")",
                width: 200,
                type: "date",
                format: "{0:G}"
            }]
        });
    });
</script>


